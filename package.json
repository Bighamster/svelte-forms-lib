{
  "name": "svelte-forms-lib",
  "version": "1.1.0",
  "description": "Svelte forms lib - A lightweight library for managing forms in Svelte v3",
  "scripts": {
    "start": "rollup -c -w rollup.config.js",
    "build": "cross-env NODE_ENV=production && rollup -c rollup.config.js",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "concurrently \"rollup -c -w rollup.config.js\" \"jest --watchAll\"",
    "format": "prettier --write lib/**/*.{js,svelte}",
    "commit": "git-cz"
  },
  "files": [
    "build/*",
    "lib/*"
  ],
  "svelte": "./lib/index.js",
  "author": "Tjin Au Yeung",
  "browserslist": [
    "last 1 chrome versions"
  ],
  "keywords": [
    "svelte",
    "forms",
    "validation",
    "form-validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tjinauyeung/svelte-forms-lib"
  },
  "homepage": "https://svelte-forms-lib-sapper-docs.now.sh",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "license": "MIT",
  "dependencies": {
    "property-expr": "2.0.2",
    "svelte": "3.24.0"
  },
  "devDependencies": {
    "@types/chance": "1.1.0",
    "@types/jest": "26.0.4",
    "@types/yup": "0.29.3",
    "chance": "1.1.6",
    "commitizen": "^4.1.2",
    "concurrently": "5.2.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "2.21.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-svelte": "5.2.3",
    "yup": "0.29.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
